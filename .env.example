# Database Configuration
# Use your existing Supabase PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:port/database

# Supabase (for backward compatibility during migration)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Server Configuration
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Payload CMS
# Generate a secure random string (32+ characters)
PAYLOAD_SECRET=your-super-secret-key-at-least-32-characters-long

# Optional: AI Integration (if using Gemini)
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
